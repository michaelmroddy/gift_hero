<div class="page-header">
  <h1>
    Recommenders
    <a href="/recommenders/new" class="btn btn-lg btn-success">New Recommender</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @recommenders.each do |recommender| %>
      <tr>
        <td><%= recommender.email %></td>
        <td><%= recommender.password %></td>
        <td>
          <a href="/recommenders/<%= recommender.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recommenders, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
