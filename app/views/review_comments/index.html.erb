<div class="page-header">
  <h1>
    Review comments
    <a href="/review_comments/new" class="btn btn-lg btn-success">New Review comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recommendation</th>
        <th>Comment</th>
        <th>Actions</th>
      </tr>

      <% @review_comments.each do |review_comment| %>
      <tr>
        <td>
          <% if review_comment.recommendation.present? %>
            <a href="/gift_recommendations/<%= review_comment.recommendation.id %>">
              <%= review_comment.recommendation.gift %>
            </a>
          <% end %>
        </td>
        <td><%= review_comment.comment %></td>
        <td>
          <a href="/review_comments/<%= review_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/review_comments/<%= review_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_review_comment/<%= review_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @review_comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
