<div class="page-header">
  <h3>Review Comment #<%= @review_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Recommendation</dt>
      <dd>
        <% if @review_comment.recommendation.present? %>
          <a href="/gift_recommendations/<%= @review_comment.recommendation_id %>">
            <%= @review_comment.recommendation.gift %>
          </a>
        <% end %>
      </dd>

      <dt>Comment</dt>
      <dd><%= @review_comment.comment %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/review_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/review_comments/<%= @review_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review_comment/<%= @review_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
