<!-- Validation failure messages -->
<% if @interest.errors.any? %>
  <% @interest.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Interest</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_interest" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for interest -->
      <div class="form-group">
        <label for="interest" class="control-label">
          Interest
        </label>

        <input type="text" id="interest" name="interest" placeholder="Interest" class="form-control" value="<%= @interest.interest %>">
      </div>

      <button class="btn btn-success">
        Create Interest
      </button>
      or
      <a href="/interests">Cancel</a>
    </form>
  </div>
</div>
