<!-- Validation failure messages -->
<% if @gift_occasion_type.errors.any? %>
  <% @gift_occasion_type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Gift Occasion Type</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_gift_occasion_type" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for occasion -->
      <div class="form-group">
        <label for="occasion" class="control-label">
          Occasion
        </label>

        <input type="text" id="occasion" name="occasion" placeholder="Occasion" class="form-control" value="<%= @gift_occasion_type.occasion %>">
      </div>

      <button class="btn btn-success">
        Create Gift Occasion Type
      </button>
      or
      <a href="/gift_occasion_types">Cancel</a>
    </form>
  </div>
</div>
