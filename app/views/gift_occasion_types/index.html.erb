<div class="page-header">
  <h1>
    Gift occasion types
    <a href="/gift_occasion_types/new" class="btn btn-lg btn-success">New Gift occasion type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Occasion</th>
        <th>Actions</th>
      </tr>

      <% @gift_occasion_types.each do |gift_occasion_type| %>
      <tr>
        <td><%= gift_occasion_type.occasion %></td>
        <td>
          <a href="/gift_occasion_types/<%= gift_occasion_type.id %>" class="btn btn-primary">Show</a>
          <a href="/gift_occasion_types/<%= gift_occasion_type.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_gift_occasion_type/<%= gift_occasion_type.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @gift_occasion_types, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
