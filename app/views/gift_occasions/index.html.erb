<div class="page-header">
  <h1>
    Upcoming Events
    <% if current_user.role.role == "User" %>
    <a href="/gift_occasions/new" class="btn btn-lg btn-success">New Gift occasion</a>
    <%end%>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Date</th>
        <th>Person</th>
        <th>Budget</th>
        <th>Spending</th>
        <th>Actions</th>
      </tr>

      <%   @my_gift_occasions.each do |gift_occasion| %>
      <tr>
        <td>
          <% if gift_occasion.occasion_type.present? %>
            <a >
              <%= gift_occasion.occasion_type.occasion %>
            </a>
          <% end %>
        </td>
        <td><%= gift_occasion.date.strftime("%m/%d/%Y") %></td>
        <td>
          <% if gift_occasion.receiver.present? %>
            <a href="/gift_receivers/<%= gift_occasion.receiver.id %>">
              <%= gift_occasion.receiver.name %>
            </a>
          <% end %>
        </td>
        <td><%= gift_occasion.budget %></td>
        <td>
          <p style="text-align:left;">
            Amount Spent: <%=gift_occasion.total_cost %>
            <span style="float:right;">Amount Remaining: <%=(gift_occasion.budget - gift_occasion.total_cost.to_f).round%></span>
          </p>
            <br>
          <meter value="<%=(gift_occasion.total_cost.to_f).round/gift_occasion.budget%>" min="0" max="1" low = ".4" High = ".95"></meter>
        </td>
        <td>
          <% if current_user.role.role == "User" %>
          <a href="/gift_occasions/<%= gift_occasion.id %>" class="btn btn-primary">See Gifts</a>
            <a href="/gift_occasions/<%= gift_occasion.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_gift_occasion/<%= gift_occasion.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
            <%else%>
            <a href="/gift_occasions/<%= gift_occasion.id %>" class="btn btn-primary">Recommend Gifts</a>
            <%end%>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @gift_occasions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
