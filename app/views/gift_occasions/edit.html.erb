<!-- Validation failure messages -->
<% if @gift_occasion.errors.any? %>
  <% @gift_occasion.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Gift Occasion #<%= @gift_occasion.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_gift_occasion/<%= @gift_occasion.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for occasion_type_id -->
      <div class="form-group">
        <label for="occasion_type_id" class="control-label">
          Occasion type
        </label>

        <%= select_tag(:occasion_type_id, options_from_collection_for_select(GiftOccasionType.all, :id, :created_at, @gift_occasion.occasion_type_id), :class => "form-control") %>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @gift_occasion.date %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @gift_occasion.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for receiver_id -->
      <div class="form-group">
        <label for="receiver_id" class="control-label">
          Receiver
        </label>

        <%= select_tag(:receiver_id, options_from_collection_for_select(GiftReceiver.all, :id, :name, @gift_occasion.receiver_id), :class => "form-control") %>
      </div>

      <!-- Label and input for budget -->
      <div class="form-group">
        <label for="budget" class="control-label">
          Budget
        </label>

        <input type="text" id="budget" name="budget" placeholder="Budget" class="form-control" value="<%= @gift_occasion.budget %>">
      </div>

      <button class="btn btn-warning">
        Update Gift Occasion
      </button>
      or
      <a href="/gift_occasions/<%= @gift_occasion.id %>">Cancel</a>
    </form>
  </div>
</div>
